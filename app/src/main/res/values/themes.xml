<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicBuddy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Fundo padrão -->
        <item name="android:windowBackground">@color/background</item>
        <!-- Força modo claro -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.MedicBuddy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MedicBuddy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MedicBuddy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Dialog clara com texto azul claro -->
    <style name="MedicBuddy_LightDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@color/cardBackground</item>
        <item name="android:textColor">@color/lightBlueText</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>
